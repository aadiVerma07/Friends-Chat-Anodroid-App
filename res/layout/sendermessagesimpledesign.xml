<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sendermessagebg"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10sp"
        android:maxWidth="300sp"
        android:minWidth="100sp"
        android:minHeight="60sp"
        android:maxHeight="400sp"
        android:layout_margin="4sp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/sendermsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:inputType="textMultiLine"
            android:maxWidth="280sp"
            android:maxHeight="380sp"
            android:text="Hello How are you doing ?"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendermessagetime"
            android:layout_gravity="right"
            android:text="12:30AM"
            android:textColor="#000000"/>

    </LinearLayout>
</RelativeLayout>